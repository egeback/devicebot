  <body>
    <div id="home">
      <div class="toolbar">
        <h1>devicebot</h1>
        <a class="button flip" id="infoButton" href="#about">Om</a>
      </div>

      <ul class="rounded">
        <% @devices.each do |device| %>
          <li>
            <%= device %> <span class="toggle"><input type="checkbox" value="/devices/<%= device.id %>" <%= checked(device.status) %>/></span>
          </li>
        <% end%>
        <li>
          Alla <span class="toggle"><input type="checkbox" value="/devices" /></span>
        </li>
      </ul>
    </div>

    <div id="about" class="selectable">
      <div class="toolbar">
        <h1>Om</h1>
      </div>

      <ul class="rounded">
        <li>devicebot</li>
        <li class="forward"><a href="http://www.svendahlstrand.se" target="_blank">Av Sven Dahlstrand</a></li>
      </ul>

      <p><a href="#" class="grayButton goback">St√§ng</a></p>
    </div>
  </body>
